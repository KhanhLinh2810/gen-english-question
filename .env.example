# =========================
# Application
# =========================
PORT=8000
IGNORE_AUTHEN=false

# =========================
# Database
# =========================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=insurance_db

POOL_SIZE=8
MAX_OVERFLOW=16
POOL_RECYCLE=800

# =========================
# JWT Authentication
# =========================
JWT_EXPIRATION_DELTA=24
JWT_ALGORITHM=HS256
JWT_SECRET=your_jwt_secret_key

# =========================
# Google API
# =========================
GOOGLE_API_KEY=your_google_api_key

# =========================
# OpenAI
# =========================
OPEN_AI_API_KEY=your_openai_api_key
OPEN_AI_BASE_URL=https://api.openai.com/v1

# =========================
# Elasticsearch
# =========================
ELASTIC_URL=http://localhost:9200
ELASTIC_API_KEY=your_elastic_api_key

# =========================
# Evaluation Weights
# =========================
WEIGHT_STRUCTURE=0.2
WEIGHT_POPULARITY=0.2
WEIGHT_DISTRACTOR=0.4
WEIGHT_AI_ADJUST_FACTOR=0.8

# =========================
# Evaluation Penalty - Structure
# =========================
PENALTY_MISSING_QUESTION_TEXT=0.4
PENALTY_MISSING_CHOICE=0.2
PENALTY_NO_CORRECT_ANSWER=0.4
PENALTY_EMPTY_CHOICE=0.1
PENALTY_DUPLICATED_CHOICES=0.1
PENALTY_GRAMMAR_ERROR=0.05

# =========================
# Distractor - General
# =========================
DISTRACTOR_EMPTY_CHOICE_DEDUCTION=0.05

# =========================
# Distractor - Embedding Similarity Thresholds
# =========================
DISTRACTOR_EMBEDDING_SIMILARITY_TOO_DIFFERENT=0.35
DISTRACTOR_EMBEDDING_SIMILARITY_MODERATE=0.45
DISTRACTOR_EMBEDDING_SIMILARITY_GOOD=0.6
DISTRACTOR_EMBEDDING_SIMILARITY_STRONG=0.7

# =========================
# Distractor - Paragraph
# =========================
DISTRACTOR_PARAGRAPH_LENGTH_WEIGHT=0.1
DISTRACTOR_PARAGRAPH_DIFFICULTY_WEIGHT=0.9

DISTRACTOR_PARAGRAPH_VOCAB_LENGTH_THRESHOLDS=[50,100,200,300]
DISTRACTOR_PARAGRAPH_OTHER_LENGTH_THRESHOLDS=[50,100,200,300]

DISTRACTOR_PARAGRAPH_DIRECT_MATCH_SIM=0.85
DISTRACTOR_PARAGRAPH_PARAPHRASE_SIM=0.5
DISTRACTOR_PARAGRAPH_DIFFICULTY_LEVELS=[1,3,5]

# =========================
# Distractor - Lexical Family
# =========================
DISTRACTOR_LEXICAL_FAMILY_HIGH_LEMMA=0.9
DISTRACTOR_LEXICAL_FAMILY_HIGH_POS=0.9
DISTRACTOR_LEXICAL_FAMILY_MEDIUM_HIGH_POS=0.6
DISTRACTOR_LEXICAL_FAMILY_MEDIUM_LEMMA=0.7
DISTRACTOR_LEXICAL_FAMILY_MEDIUM_BOTH=0.4
DISTRACTOR_LEXICAL_FAMILY_LOW=0.3

DISTRACTOR_LEXICAL_FAMILY_HIGH_LEMMA_SCORE=0.75
DISTRACTOR_LEXICAL_FAMILY_HIGH_POS_SCORE=0.9
DISTRACTOR_LEXICAL_FAMILY_MEDIUM_HIGH_POS_SCORE=0.7
DISTRACTOR_LEXICAL_FAMILY_MEDIUM_LEMMA_SCORE=0.6
DISTRACTOR_LEXICAL_FAMILY_MEDIUM_BOTH_SCORE=0.45
DISTRACTOR_LEXICAL_FAMILY_LOW_SCORE=0.3
